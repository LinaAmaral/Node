<%- include("../partials/header")%>
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="mt-5">Cadastrar Produtos</h1>
                <form action="/produtos/cadastrarProdutos" method="POST">
                    <div class="form-group">
                        <label for="nome">Nome</label>
                        <input class="form-control" type="text" id="nome" name="nome" placeholder="nome do produto">
                    </div>
                    <div class="form-group">
                        <label for="valor">Valor Unitário</label>
                        <input type="number" step="0.01" class="form-control" id="valor" name="valor"
                            placeholder="00,00">
                    </div>
                    <div class="form-group">
                        <label for="codigo">Código de Barras</label>
                        <input type="text" class="form-control" id="codBarras" name="codBarras" placeholder="000000">
                    </div>
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </form>
            </div>
        </div>
    </div>
<%- include("../partials/footer")%>