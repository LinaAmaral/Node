<%- include('../partials/header')%>

<section class="container">
    <div class="row">
        <div class="col">
            <div class="row mt-5">
                <div class="col-6">
                    <h1>Lista produtos</h1>
                </div>
                <div class="col-6">
                    <a class="btn btn-primary" href="/produtos/cadastrarProdutos">Inserir novo produtos</a>
                </div>
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Valor</th>
                        <th>Código</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% item.forEach(function(produto){%>
                        <tr>
                            <td>
                                <%= produto.nome %>
                            </td>
                            <td>
                                <%= produto.vlUnit %>
                            </td>
                            <td>
                                <%= produto.codigoBarras %>
                            </td>
                            <td>
                                <a href="/produtos/editarProduto/<%= produto._id%>" class="btn btn-warning">Editar</a>
                                <a href="/produtos/deletarProduto/<%= produto._id%>" class="btn btn-danger">Deletar</a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</section>
<%- include('../partials/footer')%>
